#include <Adafruit_GFX.h>
#include <Adafruit_PCD8544.h>


#define RST 2
#define CE  15
#define DC  0
#define DIN 23
#define CLK 18

#define BTN_UP    32 
#define BTN_DOWN  26
#define BTN_SELECT 25
#define BTN_BACK   33

Adafruit_PCD8544 display(CLK, DIN, DC, CE, RST);


const uint8_t ir[] PROGMEM = {
  0x3F, 0x00,
  0x40, 0x80,
  0x9E, 0x40,
  0x21, 0x00,
  0x0C, 0x00,
  0x00, 0x00,
  0x0C, 0x00,
  0x1A, 0x00,
  0x1E, 0x00,
  0xFF, 0xC0
};

const uint8_t subghz[] PROGMEM ={
  0x40, 0x80,
  0x92, 0x40,
  0xA1, 0x40,
  0xAD, 0x40,
  0xAD, 0x40,
  0x80, 0x40,
  0x4C, 0x80,
  0x0C, 0x00,
  0x0C, 0x00,
  0x0C, 0x00
};

const uint8_t nfc[] PROGMEM ={
	0x01, 0x00, 0x00, 0x80, 0x44, 0x40, 0xc2, 0x40, 0xa2, 0x40, 0x92, 0x40, 0x8c, 0x40, 0x44, 0x40, 
	0x00, 0x80, 0x01, 0x00
};

const uint8_t file[] PROGMEM = {
	0xfe, 0x00, 0x85, 0x00, 0xb4, 0x80, 0x87, 0x80, 0xb0, 0x80, 0x80, 0x80, 0xbe, 0x80, 0x80, 0x80, 
	0x80, 0x80, 0xff, 0x80
};

const uint8_t settings[] PROGMEM ={
	0x83, 0x00, 0x46, 0x00, 0x36, 0x40, 0x27, 0xc0, 0x0f, 0x80, 0x7c, 0x00, 0xf9, 0x00, 0x9b, 0x80, 
	0x19, 0xc0, 0x30, 0xc0
};



const uint8_t gpio[] PROGMEM ={
	0x22, 0x20, 0x22, 0x20, 0x77, 0x70, 0x77, 0x70, 0x77, 0x70, 0x77, 0x70, 0x22, 0x20, 0x22, 0x20, 
	0x22, 0x20, 0x00, 0x00, 0xff, 0xf8, 0x88, 0x88, 0xaa, 0xa8, 0x88, 0x88
};




void setup() {
  display.begin();
  display.setContrast(50);
  display.clearDisplay();

  display.drawBitmap(20, 10,ir , 10, 10, BLACK);
  display.drawBitmap(0, 0,subghz , 10, 10, BLACK);
  display.drawBitmap(66, 32,nfc , 10, 10, BLACK);
  display.drawBitmap(64, 4,file , 10, 10, BLACK);
  display.drawBitmap(45, 24,settings , 10, 10, BLACK);
  display.drawBitmap(6, 35,gpio , 14, 14, BLACK);



  display.display();
}

void loop() {
  // لا شيء هنا
}
